programa
{
	inclua biblioteca Util
	funcao inicio()
	{
		inteiro mat[10][10], n, i, m, j 

		escreva("Quantas linhas vai ter a matriz? ")
		leia(n)
		escreva("Quantas colunas vai ter a matriz? ")
		leia(m)

		para(i = 0; i < n; i++)
		{
			para(j = 0; j < m; j++)
			{
				escreva("Elementos [", i,", ", j,"]:")
				leia(mat[i][j])
			}
		}

		escreva("ELEMENTOS DA MATRIZ\n")
		para(i = 0; i < n; i++)
		{
			para(j = 0; j < m; j++)
			{
				escreva(mat[i][j], " ")
			}
			escreva("\n")
		}
	}
}
